{% extends "WPExoBundle::layout.html.twig" %}
{% block css %}
    <link href="{{ asset("public/css/bootstrap.min.css") }}" rel="stylesheet">
    <link href="{{ asset ("public/css/modern-business.css") }}" rel="stylesheet">
    <link href="{{ asset ("public/css/exofex.css") }}" rel="stylesheet">
{% endblock %}
{% block title %}
    Modifier le profil - {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-xs-12">
                <h1 class="page-header">Modifier la demande</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path ("wp_exo_homepage") }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path ("wp_exo_profile",{'user':app.request.get('user')}) }}">{{ profile.username }}</a>
                    </li>
                    {#<li><a href="{{ path ("wp_exo_askingPost",{'id':asking.id}) }}">{{ asking.title }}</a>#}
                    {#</li>#}
                    <li class="active">Modifier le profil</li>
                </ol>
            </div>
        </div>
        <div id="register">
            {% form_theme form "bootstrap_3_layout.html.twig" %}
            <!--<div class="col-md-2"></div>-->
            <div class="row">
                <!--<div class="col-md text-center">-->
                <div class="col-md-7">
                    {{ form(form) }}
                </div>
                <!--</div>-->
            </div>
        </div>
    </div>
{% endblock %}