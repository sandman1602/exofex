{% extends "WPUserBundle::layout.html.twig" %}
{% block css %}
    <link href="{{ asset("public/css/bootstrap.min.css") }}" rel="stylesheet">
    <link href="{{ asset ("public/css/modern-business.css") }}" rel="stylesheet">
    <link href="{{ asset ("public/css/exofex.css") }}" rel="stylesheet">
{% endblock %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="page-header">Inscription|Connexion</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path ("wp_exo_homepage") }}">Home</a>
                    </li>
                    <li class="active">Inscription|Connexion</li>
                </ol>
            </div>
        </div>
        <div id="register">
            <div class="row">
                <div class="col-md-10">
                    <!-- Where all the magic happens -->
                    <!-- LOGIN FORM -->
                    {#<div class="col-md-1"></div>#}
                    <div class="col-md-5 col-xs-12" style="padding:0">
                        <div class="logo">Connexion</div>
                        <!-- Main Form -->
                        <div class="login-form-1">
                            {% form_theme form "bootstrap_3_layout.html.twig" %}
                            <form id="login-form" class="text-left" action="{{ path('fos_user_security_check') }}"
                                  method="post">
                                {% form_theme form "bootstrap_3_layout.html.twig" %}
                                <div class="login-form-main-message"></div>
                                <div class="main-login-form">
                                    <div class="login-group">
                                        <div class="form-group">
                                            <label for="lg_username" class="sr-only">Username</label>
                                            <input type="text" class="form-control" id="lg_username" name="_username"
                                                   placeholder="Pseudo">
                                        </div>
                                        <div class="form-group">
                                            <label for="lg_password" class="sr-only">Password</label>
                                            <input type="password" class="form-control" id="lg_password"
                                                   name="_password"
                                                   placeholder="Mot de passe">
                                        </div>
                                        <div class="form-group login-group-checkbox">
                                            <input type="checkbox" id="lg_remember" name="_remember_me">
                                            <label class="remember" for="lg_remember">Se souvenir</label>
                                        </div>
                                    </div>
                                    <button type="submit" class="login-button btn"><i class="fa fa-chevron-right"></i>Se
                                        connecter
                                    </button>
                                </div>
                            </form>
                            {% if error %}
                                <div>{{ error.message }}</div>
                            {% endif %}
                        </div>
                        <!-- end:Main Form -->
                    </div>
                    <!-- REGISTRATION FORM -->

                    <div class="col-md-2"></div>
                    <div class="col-md-5 col-xs-12" style="padding:0">
                        <div class="logo">Inscription</div>
                        <!-- Main Form -->
                        <div class="login-form-1">
                            {% form_theme form "bootstrap_3_layout.html.twig" %}
                            <div id="register-form" class="text-left">

                                <div class="main-login-form">

                                    <div class="login-group">
                                        {% if msgError != null %}
                                            <div>{{ msgError }}</div>
                                        {% endif %}
                                        {{ form(form) }}
                                    </div>
                                    {% for flashMessage in app.session.flashbag.get('success') %}
                                        {{ flashMessage }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <!-- end:Main Form -->
                    </div>
                </div>
            </div>
        </div>
        <!-- end:Main Form -->
    </div>
{% endblock %}